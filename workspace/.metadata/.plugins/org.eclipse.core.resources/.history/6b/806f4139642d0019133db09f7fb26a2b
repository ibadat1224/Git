package collectionframework;

import java.util.ArrayList;
import java.util.Collections; //Collection is a class from java.util package for common operation
								// Collection is an interface which define common behavior

public class CollectionsUtility {

	public static void main(String[] args) {

		ArrayList<Integer> arr = new ArrayList<>();

		arr.add(2);
		arr.add(3);
		arr.add(3);
		arr.add(3);
		arr.add(4);
		arr.add(-2);
		arr.add(-2);
		arr.add(-2);

		// Collections.fill(arr, 5);
		Collections.sort(arr);
		// Collections.shuffle(arr);
		int a = Collections.binarySearch(arr, -2);
		int freq = Collections.binarySearch(arr, 2);
		System.out.println(freq);
		System.out.println(arr);
	}

}
